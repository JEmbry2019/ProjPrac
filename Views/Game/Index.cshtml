@model IEnumerable<ProjPrac.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Game Choice</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gym)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecRoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Computer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
